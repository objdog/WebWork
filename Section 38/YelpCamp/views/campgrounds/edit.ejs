<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 class="form-title">Edit <%= campground.name %></h1>
        <div class="input-form">
        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value= "<%= campground.name %>" name="campground[name]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%= campground.image %>" name="campground[image]" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="10" name="campground[description]" required><%= campground.description %></textarea>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[cost]" value="<%= campground.cost %>" step="0.01" min="0" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go back!</a>
        </div>
        
        
    </div>
</div>
<% include ../partials/footer %>